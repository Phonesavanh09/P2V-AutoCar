    <script>
        function searchCars() {
            let input = document.getElementById("searchInput").value.toLowerCase();
            let carList = document.getElementById("carList");
            let cards = carList.getElementsByClassName("col-md-4");
            for (let i = 0; i < cards.length; i++) {
                let title = cards[i].getElementsByTagName("h5")[0].textContent.toLowerCase();
                if (title.indexOf(input) > -1) {
                    cards[i].style.display = "";
                } else {
                    cards[i].style.display = "none";
                }
            }
        }

        function filterCars() {
            let brand = document.getElementById("brandFilter").value.toLowerCase();
            let price = document.getElementById("priceFilter").value;
            let year = document.getElementById("yearFilter").value;
            let carList = document.getElementById("carList");
            let cards = carList.getElementsByClassName("col-md-4");
            for (let i = 0; i < cards.length; i++) {
                let title = cards[i].getElementsByTagName("h5")[0].textContent.toLowerCase();
                let priceText = cards[i].querySelector("p:nth-child(2)").textContent.match(/\d+/g).join("");
                let yearText = cards[i].querySelector("h5").textContent.match(/\d{4}/);
                yearText = yearText ? yearText[0] : "";
                let display = true;
                if (brand && !title.includes(brand)) display = false;
                if (price && parseInt(priceText) > parseInt(price)) display = false;
                if (year && yearText && parseInt(yearText) != parseInt(year)) display = false;
                cards[i].style.display = display ? "" : "none";
            }
        }

        function filterByProvince() {
            const province = document.getElementById('provinceFilter').value;
            const sort = document.getElementById('priceSort').value;
            window.location.href = `/?province=${encodeURIComponent(province)}&page=1&sort=${sort}`;
        }

        function sortCars() {
            const province = document.getElementById('provinceFilter').value;
            const sort = document.getElementById('priceSort').value;
            window.location.href = `/?province=${encodeURIComponent(province)}&page=1&sort=${sort}`;
        }
    </script>
