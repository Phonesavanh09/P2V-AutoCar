<!DOCTYPE html>
<html lang="<%- lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- lang === 'la' ? 'ຂາຍລົດມືສອງ' : 'Used Car Sales' %></title>
    <link href="https://fonts.googleapis.com/css2?family=Phetsarath&family=Prompt:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light-blue">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/images/logo1.png" alt="Logo" style="height: 80px; margin-right: 15px;">
                <%- lang === 'la' ? 'P2V Laos Auto Car' : 'Used Car Sales' %>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link lao-text" href="/"><%- lang === 'la' ? 'ໜ້າຫຼັກ' : 'Home' %></a>
                    <a class="nav-link lao-text" href="/sell-car"><%- lang === 'la' ? 'ສະເໜີຂາຍລົດ' : 'Sell Your Car' %></a>
                    <a class="nav-link lao-text" href="/contact"><%- lang === 'la' ? 'ຕິດຕໍ່' : 'Contact' %></a>
                    <a class="nav-link lao-text" href="?lang=<%- lang === 'la' ? 'en' : 'la' %>"><%- lang === 'la' ? 'English' : 'ລາວ' %></a>
                    <a class="nav-link lao-text" href="/admin/login"><%- lang === 'la' ? 'ແອດມິນ' : 'Admin' %></a>
                </div>
            </div>
        </div>
    </nav>

    <div class="hero-section text-center">
        <h1 class="lao-text"><%- lang === 'la' ? 'ຊື້-ຂາຍລົດມືສອງທົ່ວປະເທດລາວ' : 'Buy & Sell Quality Used Cars' %></h1>
        <p class="lead lao-text"><%- lang === 'la' ? 'ລົດທຸກຄັນຜ່ານການກວດສອບຄຸນນະພາບ' : 'Every car is quality checked' %></p>
        <div class="mt-3">
            <a href="https://www.tiktok.com/@p2v.laos.auto.car" target="_blank" class="btn btn-primary lao-text"><%- lang === 'la' ? 'ຕິດຕາມພວກເຮົາໃນ TikTok' : 'Follow us on TikTok' %></a>
            <a href="https://play.google.com/store/apps/details?id=com.ennxo" target="_blank" class="btn btn-outline-primary lao-text"><%- lang === 'la' ? 'ດາວໂຫຼດແອັບ' : 'Download App' %></a>
        </div>
    </div>

    <div class="container mt-4">
        <!-- Search and Filter Section -->
        <div class="filter-section bg-light p-4 rounded">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" id="searchInput" class="form-control" placeholder="<%- lang === 'la' ? 'ຄົ້ນຫາຕາມຍີ່ຫໍ້ຫຼືຮຸ່ນ' : 'Search by brand or model' %>" onkeyup="searchCars()">
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="lao-text"><%- lang === 'la' ? 'ຍີ່ຫໍ້' : 'Brand' %></label>
                            <select id="brandFilter" class="form-control" onchange="filterCars()">
                                <option value=""><%- lang === 'la' ? 'ທັງໝົດ' : 'All' %></option>
                                <option value="Toyota">Toyota</option>
                                <option value="Honda">Honda</option>
                                <option value="Mazda">Mazda</option>
                                <option value="Mitsubishi">Mitsubishi</option>
                                <!-- เพิ่มยี่ห้ออื่นๆ -->
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="lao-text"><%- lang === 'la' ? 'ລາຄາສູງສຸດ' : 'Max Price' %></label>
                            <input type="number" id="priceFilter" class="form-control" placeholder="<%- lang === 'la' ? 'ລາຄາສູງສຸດ' : 'Max Price' %>" onkeyup="filterCars()">
                        </div>
                        <div class="col-md-3">
                            <label class="lao-text"><%- lang === 'la' ? 'ປີ' : 'Year' %></label>
                            <input type="number" id="yearFilter" class="form-control" placeholder="<%- lang === 'la' ? 'ປີ' : 'Year' %>" onkeyup="filterCars()">
                        </div>
                        <div class="col-md-3">
                            <label class="lao-text"><%- lang === 'la' ? 'ແຂວງ' : 'Province' %></label>
                            <select id="provinceFilter" class="form-control" onchange="filterByProvince()">
                                <option value=""><%- lang === 'la' ? 'ທັງໝົດ' : 'All' %></option>
                                <% provinces.forEach(province => { %>
                                    <option value="<%- province %>" <%- selectedProvince === province ? 'selected' : '' %>><%- province %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label class="lao-text"><%- lang === 'la' ? 'ຈັດລຳດັບຕາມ' : 'Sort by' %></label>
                    <select id="priceSort" class="form-control w-25 d-inline-block" onchange="sortCars()">
                        <option value="default" <%- typeof sort !== 'undefined' && sort === 'default' ? 'selected' : '' %>><%- lang === 'la' ? 'ວັນທີ່' : 'Date' %></option>
                        <option value="price_asc" <%- typeof sort !== 'undefined' && sort === 'price_asc' ? 'selected' : '' %>><%- lang === 'la' ? 'ລາຄາຖືກໄປແພງ' : 'Price: Low to High' %></option>
                        <option value="price_desc" <%- typeof sort !== 'undefined' && sort === 'price_desc' ? 'selected' : '' %>><%- lang === 'la' ? 'ລາຄາແພງໄປຖືກ' : 'Price: High to Low' %></option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Featured Cars Section -->
        <div class="featured-cars mt-4">
            <h3 class="lao-text"><%- lang === 'la' ? 'ລົດແນະນຳ' : 'Featured Cars' %></h3>
            <div class="row" id="carList">
                <% cars.forEach(car => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card car-card">
                            <% if (car.coverImage || (car.images && car.images.length > 0)) { %>
                                <img src="<%- car.coverImage || car.images[0] %>" class="card-img-top" alt="Car Image">
                            <% } else { %>
                                <img src="/images/placeholder.jpg" class="card-img-top" alt="Placeholder">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title lao-text"><%- car.brand %> <%- car.model %> <%- car.year %></h5>
                                <p class="card-text lao-text"><%- lang === 'la' ? 'ລາຄາ' : 'Price' %>: <%- car.price.toLocaleString() %> LAK</p>
                                <p class="card-text lao-text"><%- lang === 'la' ? 'ແຂວງ' : 'Province' %>: <%- car.province %></p>
                                <p class="card-text lao-text"><%- lang === 'la' ? 'ເກຍ' : 'Transmission' %>: <%- car.transmission %></p>
                                <% if (car.mileage) { %>
                                    <p class="card-text lao-text"><%- lang === 'la' ? 'ໄມລ໌' : 'Mileage' %>: <%- car.mileage.toLocaleString() %> km</p>
                                <% } %>
                                <div class="quality-badges">
                                    <% if (car.inspected && car.inspected.noFlood) { %>
                                        <span class="badge bg-success"><%- lang === 'la' ? 'ບໍ່ເຄີຍຈົມນ້ຳ' : 'No Flood' %></span>
                                    <% } %>
                                    <% if (car.inspected && car.inspected.noMajorAccident) { %>
                                        <span class="badge bg-success"><%- lang === 'la' ? 'ບໍ່ເຄີຍຊົນໜັກ' : 'No Major Accident' %></span>
                                    <% } %>
                                    <% if (car.inspected && car.inspected.noFire) { %>
                                        <span class="badge bg-success"><%- lang === 'la' ? 'ບໍ່ເຄີຍໄຟໄໝ້' : 'No Fire' %></span>
                                    <% } %>
                                    <% if (car.isPremium) { %>
                                        <span class="badge bg-warning text-dark"><%- lang === 'la' ? 'ພຣີມຽມ' : 'Premium' %></span>
                                    <% } %>
                                </div>
                                <a href="/car/<%- car._id %>" class="btn btn-primary lao-text mt-2"><%- lang === 'la' ? 'ເບິ່ງລາຍລະອຽດ' : 'View Details' %></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- Pagination -->
        <% if (cars.length > 0) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?page=<%= currentPage - 1 %>&province=<%= selectedProvince || '' %>&sort=<%= typeof sort !== 'undefined' ? sort : 'default' %>&lang=<%- lang %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo; <%- lang === 'la' ? 'ກ່ອນໜ້າ' : 'Previous' %></span>
                            </a>
                        </li>
                    <% } %>
                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="/?page=<%= i %>&province=<%= selectedProvince || '' %>&sort=<%= typeof sort !== 'undefined' ? sort : 'default' %>&lang=<%- lang %>"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?page=<%= currentPage + 1 %>&province=<%= selectedProvince || '' %>&sort=<%= typeof sort !== 'undefined' ? sort : 'default' %>&lang=<%- lang %>" aria-label="Next">
                                <span aria-hidden="true"><%- lang === 'la' ? 'ຕໍ່ໄປ' : 'Next' %> &raquo;</span>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } else { %>
            <p class="text-center alert alert-warning lao-text"><%- lang === 'la' ? 'ບໍ່ມີລົດທີ່ມີຢູ່' : 'No cars available' %></p>
        <% } %>
    </div>

    <footer class="footer text-center bg-light-blue text-dark">
        <div class="container">
            <p class="lao-text"><%- lang === 'la' ? 'ທີ່ຢູ່: ນະຄອນປາກເຊ , ແຂວງ ຈຳປາສັກ, ປະເທດ ລາວ' : 'Address: Pakse city, Champasak province, Laos' %></p>
            <p class="lao-text"><%- lang === 'la' ? 'ເບີໂທ: +856 20 9993 2997' : 'Phone: +856 20 9993 2997' %></p>
            <p class="lao-text"><%- lang === 'la' ? 'ອີເມວ: p2v.autocar@gmail.com' : 'Email: p2v.autocar@gmail.com' %></p>
            <p class="lao-text"><%- lang === 'la' ? 'ຕິດຕາມພວກເຮົາ:' : 'Follow us:' %>
                <a href="https://www.facebook.com/profile.php?id=61578144165117" target="_blank" class="text-primary mx-2">Facebook</a> |
                <a href="https://www.tiktok.com/@p2v.laos.auto.car" target="_blank" class="text-primary mx-2">TikTok</a>
            </p>
            <p class="lao-text"><%- lang === 'la' ? 'ດາວໂຫຼດແອັບ:' : 'Download App:' %>
                <a href="https://play.google.com/store/apps/details?id=com.ennxo" target="_blank" class="text-primary mx-2">Google Play</a> |
                <a href="https://apps.apple.com/app/ennxo-online-marketplace/id6443513609" target="_blank" class="text-primary mx-2">App Store</a>
            </p>
            <p class="lao-text">© 2025 Used Car Sales. <%- lang === 'la' ? 'ຊື້-ຂາຍລົດມືສອງທົ່ວປະເທດລາວ' : 'All rights reserved' %>.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function searchCars() {
            let input = document.getElementById("searchInput").value.toLowerCase();
            let carList = document.getElementById("carList");
            let cards = carList.getElementsByClassName("col-md-4");
            for (let i = 0; i < cards.length; i++) {
                let title = cards[i].getElementsByTagName("h5")[0].textContent.toLowerCase();
                if (title.indexOf(input) > -1) {
                    cards[i].style.display = "";
                } else {
                    cards[i].style.display = "none";
                }
            }
        }

        function filterCars() {
            let brand = document.getElementById("brandFilter").value.toLowerCase();
            let price = document.getElementById("priceFilter").value;
            let year = document.getElementById("yearFilter").value;
            let carList = document.getElementById("carList");
            let cards = carList.getElementsByClassName("col-md-4");
            for (let i = 0; i < cards.length; i++) {
                let title = cards[i].getElementsByTagName("h5")[0].textContent.toLowerCase();
                let priceText = cards[i].querySelector("p:nth-child(2)").textContent.match(/\d+/g).join("");
                let yearText = cards[i].querySelector("h5").textContent.match(/\d{4}/);
                yearText = yearText ? yearText[0] : "";
                let display = true;
                if (brand && !title.includes(brand)) display = false;
                if (price && parseInt(priceText) > parseInt(price)) display = false;
                if (year && yearText && parseInt(yearText) != parseInt(year)) display = false;
                cards[i].style.display = display ? "" : "none";
            }
        }

        function filterByProvince() {
            const province = document.getElementById('provinceFilter').value;
            const sort = document.getElementById('priceSort').value;
            window.location.href = `/?province=${encodeURIComponent(province)}&page=1&sort=${sort}&lang=<%- lang %>`;
        }

        function sortCars() {
            const province = document.getElementById('provinceFilter').value;
            const sort = document.getElementById('priceSort').value;
            window.location.href = `/?province=${encodeURIComponent(province)}&page=1&sort=${sort}&lang=<%- lang %>`;
        }
    </script>
</body>
</html>
