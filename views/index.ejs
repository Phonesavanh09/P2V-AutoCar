<!DOCTYPE html>
<html lang="<%- lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- lang === 'th' ? 'ซื้อ-ขายรถมือสอง' : 'Used Car Sales' %></title>
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" alt="Logo" style="height: 80px; margin-right: 15px;">
                <%- lang === 'th' ? 'รถมือสองคุณภาพ' : 'Quality Used Cars' %>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/"><%- lang === 'th' ? 'หน้าหลัก' : 'Home' %></a>
                    <a class="nav-link" href="/sell-car"><%- lang === 'th' ? 'เสนอขายรถ' : 'Sell Your Car' %></a>
                    <a class="nav-link" href="/contact"><%- lang === 'th' ? 'ติดต่อ' : 'Contact' %></a>
                    <a class="nav-link" href="?lang=<%- lang === 'th' ? 'en' : 'th' %>"><%- lang === 'th' ? 'English' : 'ไทย' %></a>
                    <a class="nav-link" href="/admin/login"><%- lang === 'th' ? 'แอดมิน' : 'Admin' %></a>
                </div>
            </div>
        </div>
    </nav>

    <div class="hero-section text-center">
        <h1><%- lang === 'th' ? 'ซื้อ-ขายรถมือสองทั่วประเทศไทย' : 'Buy & Sell Used Cars Nationwide' %></h1>
        <p class="lead"><%- lang === 'th' ? 'รถทุกคันผ่านการตรวจสอบคุณภาพ' : 'Every car is quality checked' %></p>
        <div class="mt-3">
            <a href="https://www.tiktok.com/@your.tiktok" target="_blank" class="btn btn-gold"><%- lang === 'th' ? 'ติดตามเราบน TikTok' : 'Follow us on TikTok' %></a>
            <a href="https://play.google.com/store" target="_blank" class="btn btn-outline-gold"><%- lang === 'th' ? 'ดาวน์โหลดแอป' : 'Download App' %></a>
        </div>
    </div>

    <div class="container mt-4">
        <!-- Search and Filter Section -->
        <div class="filter-section bg-dark text-light p-4 rounded">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" id="searchInput" class="form-control" placeholder="<%- lang === 'th' ? 'ค้นหายี่ห้อหรือรุ่น' : 'Search by brand or model' %>" onkeyup="searchCars()">
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-3">
                            <label><%- lang === 'th' ? 'ยี่ห้อ' : 'Brand' %></label>
                            <select id="brandFilter" class="form-control" onchange="filterCars()">
                                <option value=""><%- lang === 'th' ? 'ทั้งหมด' : 'All' %></option>
                                <option value="Toyota">Toyota</option>
                                <option value="Honda">Honda</option>
                                <option value="Mazda">Mazda</option>
                                <option value="Mitsubishi">Mitsubishi</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label><%- lang === 'th' ? 'ราคาสูงสุด' : 'Max Price' %></label>
                            <input type="number" id="priceFilter" class="form-control" placeholder="<%- lang === 'th' ? 'ราคาสูงสุด' : 'Max Price' %>" onkeyup="filterCars()">
                        </div>
                        <div class="col-md-3">
                            <label><%- lang === 'th' ? 'ปี' : 'Year' %></label>
                            <input type="number" id="yearFilter" class="form-control" placeholder="<%- lang === 'th' ? 'ปี' : 'Year' %>" onkeyup="filterCars()">
                        </div>
                        <div class="col-md-3">
                            <label><%- lang === 'th' ? 'จังหวัด' : 'Province' %></label>
                            <select id="provinceFilter" class="form-control" onchange="filterByProvince()">
                                <option value=""><%- lang === 'th' ? 'ทั้งหมด' : 'All' %></option>
                                <% provinces.forEach(province => { %>
                                    <option value="<%- province %>" <%- selectedProvince === province ? 'selected' : '' %>><%- province %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label><%- lang === 'th' ? 'จัดเรียงตาม' : 'Sort by' %></label>
                    <select id="priceSort" class="form-control w-25 d-inline-block" onchange="sortCars()">
                        <option value="default" <%- typeof sort !== 'undefined' && sort === 'default' ? 'selected' : '' %>><%- lang === 'th' ? 'วันที่' : 'Date' %></option>
                        <option value="price_asc" <%- typeof sort !== 'undefined' && sort === 'price_asc' ? 'selected' : '' %>><%- lang === 'th' ? 'ราคาต่ำไปสูง' : 'Price: Low to High' %></option>
                        <option value="price_desc" <%- typeof sort !== 'undefined' && sort === 'price_desc' ? 'selected' : '' %>><%- lang === 'th' ? 'ราคาสูงไปต่ำ' : 'Price: High to Low' %></option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Featured Cars Section -->
        <div class="featured-cars mt-4">
            <h3><%- lang === 'th' ? 'รถแนะนำ' : 'Featured Cars' %></h3>
            <div class="row" id="carList">
                <% cars.forEach(car => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card car-card">
                            <% if (car.coverImage || (car.images && car.images.length > 0)) { %>
                                <img src="<%- car.coverImage || car.images[0] %>" class="card-img-top" alt="Car Image">
                            <% } else { %>
                                <img src="/images/placeholder.jpg" class="card-img-top" alt="Placeholder">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%- car.brand %> <%- car.model %> <%- car.year %></h5>
                                <p class="card-text"><%- lang === 'th' ? 'ราคา' : 'Price' %>: <%- car.price.toLocaleString() %> บาท</p>
                                <p class="card-text"><%- lang === 'th' ? 'จังหวัด' : 'Province' %>: <%- car.province %></p>
                                <p class="card-text"><%- lang === 'th' ? 'เกียร์' : 'Transmission' %>: <%- car.transmission %></p>
                                <% if (car.mileage) { %>
                                    <p class="card-text"><%- lang === 'th' ? 'ไมล์' : 'Mileage' %>: <%- car.mileage.toLocaleString() %> กม.</p>
                                <% } %>
                                <div class="quality-badges">
                                    <% if (car.inspected && car.inspected.noFlood) { %>
                                        <span class="badge bg-success"><%- lang === 'th' ? 'ไม่เคยจมน้ำ' : 'No Flood' %></span>
                                    <% } %>
                                    <% if (car.inspected && car.inspected.noMajorAccident) { %>
                                        <span class="badge bg-success"><%- lang === 'th' ? 'ไม่เคยชนหนัก' : 'No Major Accident' %></span>
                                    <% } %>
                                    <% if (car.inspected && car.inspected.noFire) { %>
                                        <span class="badge bg-success"><%- lang === 'th' ? 'ไม่เคยไฟไหม้' : 'No Fire' %></span>
                                    <% } %>
                                    <% if (car.isPremium) { %>
                                        <span class="badge bg-gold text-dark"><%- lang === 'th' ? 'พรีเมียม' : 'Premium' %></span>
                                    <% } %>
                                </div>
                                <a href="/car/<%- car._id %>" class="btn btn-gold mt-2"><%- lang === 'th' ? 'ดูรายละเอียด' : 'View Details' %></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- Pagination -->
        <% if (cars.length > 0) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?page=<%= currentPage - 1 %>&province=<%= selectedProvince || '' %>&sort=<%= typeof sort !== 'undefined' ? sort : 'default' %>&lang=<%- lang %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo; <%- lang === 'th' ? 'ก่อนหน้า' : 'Previous' %></span>
                            </a>
                        </li>
                    <% } %>
                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="/?page=<%= i %>&province=<%= selectedProvince || '' %>&sort=<%= typeof sort !== 'undefined' ? sort : 'default' %>&lang=<%- lang %>"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?page=<%= currentPage + 1 %>&province=<%= selectedProvince || '' %>&sort=<%= typeof sort !== 'undefined' ? sort : 'default' %>&lang=<%- lang %>" aria-label="Next">
                                <span aria-hidden="true"><%- lang === 'th' ? 'ถัดไป' : 'Next' %> &raquo;</span>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } else { %>
            <p class="text-center alert alert-warning"><%- lang === 'th' ? 'ไม่มีรถที่พร้อมใช้งาน' : 'No cars available' %></p>
        <% } %>
    </div>

    <footer class="footer text-center bg-dark text-gold">
        <div class="container">
            <p><%- lang === 'th' ? 'ที่อยู่: กรุงเทพมหานคร, ประเทศไทย' : 'Address: Bangkok, Thailand' %></p>
            <p><%- lang === 'th' ? 'โทร: +66 2 123 4567' : 'Phone: +66 2 123 4567' %></p>
            <p><%- lang === 'th' ? 'อีเมล: contact@yourcarwebsite.com' : 'Email: contact@yourcarwebsite.com' %></p>
            <p><%- lang === 'th' ? 'ติดตามเรา:' : 'Follow us:' %>
                <a href="https://www.facebook.com/yourpage" target="_blank" class="text-gold mx-2">Facebook</a> |
                <a href="https://www.tiktok.com/@your.tiktok" target="_blank" class="text-gold mx-2">TikTok</a>
            </p>
            <p><%- lang === 'th' ? 'ดาวน์โหลดแอป:' : 'Download App:' %>
                <a href="https://play.google.com/store" target="_blank" class="text-gold mx-2">Google Play</a> |
                <a href="https://www.apple.com/app-store/" target="_blank" class="text-gold mx-2">App Store</a>
            </p>
            <p>© 2025 Used Car Sales. <%- lang === 'th' ? 'สงวนลิขสิทธิ์' : 'All rights reserved' %>.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function searchCars() {
            let input = document.getElementById("searchInput").value.toLowerCase();
            let carList = document.getElementById("carList");
            let cards = carList.getElementsByClassName("col-md-4");
            for (let i = 0; i < cards.length; i++) {
                let title = cards[i].getElementsByTagName("h5")[0].textContent.toLowerCase();
                if (title.indexOf(input) > -1) {
                    cards[i].style.display = "";
                } else {
                    cards[i].style.display = "none";
                }
            }
        }

        function filterCars() {
            let brand = document.getElementById("brandFilter").value.toLowerCase();
            let price = document.getElementById("priceFilter").value;
            let year = document.getElementById("yearFilter").value;
            let carList = document.getElementById("carList");
            let cards = carList.getElementsByClassName("col-md-4");
            for (let i = 0; i < cards.length; i++) {
                let title = cards[i].getElementsByTagName("h5")[0].textContent.toLowerCase();
                let priceText = cards[i].querySelector("p:nth-child(2)").textContent.match(/\d+/g).join("");
                let yearText = cards[i].querySelector("h5").textContent.match(/\d{4}/);
                yearText = yearText ? yearText[0] : "";
                let display = true;
                if (brand && !title.includes(brand)) display = false;
                if (price && parseInt(priceText) > parseInt(price)) display = false;
                if (year && yearText && parseInt(yearText) != parseInt(year)) display = false;
                cards[i].style.display = display ? "" : "none";
            }
        }

        function filterByProvince() {
            const province = document.getElementById('provinceFilter').value;
            const sort = document.getElementById('priceSort').value;
            window.location.href = `/?province=${encodeURIComponent(province)}&page=1&sort=${sort}&lang=<%- lang %>`;
        }

        function sortCars() {
            const province = document.getElementById('provinceFilter').value;
            const sort = document.getElementById('priceSort').value;
            window.location.href = `/?province=${encodeURIComponent(province)}&page=1&sort=${sort}&lang=<%- lang %>`;
        }
    </script>
</body>
</html>